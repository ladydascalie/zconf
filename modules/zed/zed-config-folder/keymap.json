// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
	{
		"context": "Editor && mode == full && vim_mode != insert",
		"bindings": {
			"g i": "editor::GoToImplementation",
		},
	},
	{
		"context": "Editor && mode == full && vim_mode != insert",
		"bindings": {
			"space s": "editor::SplitSelectionIntoLines",
		},
	},
	{
		"context": "Editor && mode == full && vim_mode != insert",
		"bindings": {
			"space e": "workspace::ToggleRightDock",
		},
	},
	{
		"context": "Editor && mode == full && vim_mode != insert",
		"bindings": {
			"space q": "workspace::ToggleLeftDock",
		},
	},
	{
		"context": "Editor && mode == full && vim_mode != insert",
		"bindings": {
			"space d r": "debugger::Restart",
		},
	},
	{
		"context": "Editor && mode == full && vim_mode != insert",
		"bindings": {
			"space d s": "debugger::Start",
		},
	},
	{
		"context": "Workspace",
		"bindings": {
			"ctrl-b": "workspace::ToggleRightDock",
		},
	},
	{
		"context": "Workspace",
		"bindings": {
			"ctrl-shift-b": "workspace::ToggleLeftDock",
		},
	},
	{
		"bindings": {
			"shift-f6": "debugger::Restart",
		},
	},
	{
		"context": "Editor",
		"bindings": {
			"f8": [
				"editor::GoToDiagnostic",
				{
					"severity": {
						"min": "error",
						"max": "error",
					},
				},
			],
		},
	},
	{
		"context": "Editor",
		"bindings": {
			"shift-f8": [
				"editor::GoToPreviousDiagnostic",
				{
					"severity": {
						"min": "error",
						"max": "error",
					},
				},
			],
		},
	},
]
